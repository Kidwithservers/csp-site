<style is:global>

.fullmenu {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    height: 10vh;
    width: 100vw;
    border-bottom: .5vh solid #00ffff;
}
h1  {
    font-family: ibm-term;
    color: #00ffff;
    padding-left: 1vw;
}
.title {
    margin-right: auto;
}
ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    align-items: center;
}
.dropdown ul {
    display: flex;
    flex-direction: column;
    position: relative;
    width: 17vw;
    background-color: black;
    display: none;
    position: absolute;
    z-index: 1;
    border: 0.1em solid #00ffff;
    padding-top: 0.5vh;
}
.dropdown li{
    height: 2vw;
    text-align: left;
    width: 100%;
    color: #00ffff;
    margin-left: 0.25vw;
}
.dropdown {
    position: relative;
    display: inline-block;
}
.menuitem {
 margin-right: 2vw;
 font-family: plexsans;
 font-size: 1.35em;
 color: #00ffff;
}

.dropdown:hover .submenu, .submenu:hover {
    display: block;
}
a {
    text-decoration: none;
    color: inherit;
}

</style>
